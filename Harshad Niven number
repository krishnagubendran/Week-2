*/
Q7: Harshad / Niven Number [Medium]
- Input: 18
Output: Harshad Number
- Input: 21
Output: Not Harshad Number 
*/
package week2;
import java.util.Scanner;
public class HarshadOrNivenNumber {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int temp =n, digit, sum=0;
		while(n>0) {
			digit = n %10;
			sum += digit;
			n/=10;
		}
		if(temp % sum == 0) System.out.print("Harshad Number");
		else System.out.print("Not Harshad Number");
		sc.close();
	}
}
